extends ./layout/main


block content
    canvas#login-bg
    main.main-login
        .login-left
            h1 "해외배송 어디서 보내?"
            h1 "그냥 건너건너 보내면 되지!"
        .login-main_column
            .login-img_container
                img.login-logo(src="../static/cross-cross.svg")
            form(action="http://localhost:4001/auth/login", method="post").login-form
                input(type='email' placeholder='이메일' name="email")
                input(type='password' placeholder='비밀번호' name="password")
                input(type='submit' name='로그인')
            a.signUp-link(href='http://localhost:4001/auth/join')
                button 회원가입
    script(src="../static/login.js")